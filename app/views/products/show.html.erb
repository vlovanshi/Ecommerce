<p>
  <h2><%= @product.name %></h2>
</p>
  <% @product.avatars.each do |avatar| %>    
      <%= image_tag avatar.variant(resize: "200x200")  %>    
  <% end %>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Product_number:</strong>
  <%= @product.product_number %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>
<p><%= link_to "Add #{@product.name} to cart", add_to_cart_url(@product.id), :method => :post, class: "btn btn-success " %></p>


