<p>
  <h2><%= @product.name %></h2>
</p>
  <% @product.avatars.each do |avatar| %>    
      <%= image_tag avatar.variant(resize: "200x200")  %>    
  <% end %>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Product_number:</strong>
  <%= @product.product_number %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>
<td><%= link_to 'Add to Cart', product_path, class: "btn btn-success " %></td>



