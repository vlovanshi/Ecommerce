<div class="row">
  <div class="col-sm-4" align="center">
    <p>
      <h2><%= @product.name %></h2>
    </p>
    <% @product.avatars.each do |avatar| %>    
        <%= image_tag avatar.variant(resize: "300x300")  %>    
    <% end %><br></br>
    <p><%= link_to "Add #{@product.name} to cart", add_to_cart_url(@product.id), :method => :post, class: "btn btn-success " %></p>
  </div>
  <div class="col-sm-8" align="left">
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Product_number:</strong>
      <%= @product.product_number %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p>
      <strong>Quantity:</strong>
      <%= @product.quantity %>
    </p>
    <h3>Product Reviews</h3>
      <%=  render 'reviews/collection' %>
    <h3>Leave a Review</h3>
      <%= render 'reviews/form' %>
  </div>
</div>
<p><%= link_to 'Back', products_path, class: "btn btn-dark " %></p>

