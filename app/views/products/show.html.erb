<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <% if @product.avatar.attached? %>
    <%= image_tag(@product.avatar, heigth: '200' , width: '100') %>
  <% end %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Product_number:</strong>
  <%= @product.product_number %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<td><%= link_to 'Add to Cart', product_path, class: "btn btn-success " %></td>



