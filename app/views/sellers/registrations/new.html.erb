<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name" %>
  </div> 

  <div class="field">
    <%= f.fields_for :address, Address.new do |address_form|%>
      <div class="field">
        <%= address_form.label :country %><br />
        <%= address_form.text_field :country, autofocus: true, autocomplete: "address_form.country" %> 
      </div>
      <div class="field">
        <%= address_form.label :state %><br />
        <%= address_form.text_field :state, autofocus: true, autocomplete: "address_form.state" %> 
      </div>
      <div class="field">
        <%= address_form.label :city %><br />
        <%= address_form.text_field :city, autofocus: true, autocomplete: "address_form.city" %> 
      </div>
      <div class="field">
        <%= address_form.label :postal_code %><br />
        <%= address_form.text_field :postal_code, autofocus: true, autocomplete: "address_form.postal_code" %> 
      </div>
    <% end %>
 </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "sellers/shared/links" %>
